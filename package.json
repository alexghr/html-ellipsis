{
  "name": "html-ellipsis",
  "version": "1.1.0",
  "description": "truncates a html string without messing up the tags",
  "main": "html-ellipsis.js",
  "scripts": {
    "test": "node test/truncate.js",
    "lint": "node ./node_modules/.bin/jshint html-ellipsis.js",
