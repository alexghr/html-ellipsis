    "ellipsis",
    "ellipsize"
  ],
  "author": "Alex Gherghisan <alex.gherghisan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexghr/html-ellipsis/issues"
  },
  "homepage": "https://github.com/alexghr/html-ellipsis",
  "devDependencies": {
    "jshint": "^2.5.6",
    "tape": "^3.0.0",
    "uglify-js": "^2.4.15"
  }
}
